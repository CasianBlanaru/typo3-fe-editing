{
  "name": "PixelCoda FE Editor",
  "description": "Frontend editing extension for TYPO3 with AI integration",
  "version": "1.0.0",
  "author": "PixelCoda",
  "email": "info@pixelcoda.com",
  "website": "https://pixelcoda.com",
  "colors": {
    "primary": "#0EA5E9",
    "secondary": "#F59E0B",
    "background": "#111827",
    "surface": "#1F2937",
    "text": "#F9FAFB",
    "textSecondary": "#D1D5DB",
    "border": "#374151",
    "success": "#10B981",
    "error": "#EF4444",
    "warning": "#F59E0B"
  },
  "icons": {
    "ext-icon": "ext-icon.svg",
    "edit": "edit.svg",
    "ai": "ai.svg",
    "add": "add.svg",
    "close": "close.svg"
  },
  "typography": {
    "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "fontSize": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "20px",
    "2xl": "24px",
    "3xl": "32px"
  },
  "borderRadius": {
    "sm": "4px",
    "md": "6px",
    "lg": "8px",
    "xl": "12px",
    "full": "50%"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px rgba(0, 0, 0, 0.15)"
  }
}